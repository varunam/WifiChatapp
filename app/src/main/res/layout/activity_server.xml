<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/status_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Status" />

    <Button
        android:id="@+id/send_message_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text=">"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/message_edit_text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/send_message_button_id"
        android:layout_toLeftOf="@+id/send_message_button_id" />

    <TextView
        android:id="@+id/history_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/send_message_button_id"
        android:layout_below="@+id/status_text_id"
        android:layout_alignEnd="@+id/send_message_button_id"
        android:layout_alignRight="@+id/send_message_button_id"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="31dp"
        android:gravity="bottom"
        android:text="" />
</RelativeLayout>